<h2>Ticket Page</h2>
<p>Ticket: <%= @ticket.name %></p>
<p>Description: <%= @ticket.description %></p>
<p>Status: <%=@ticket.status %></p>

<h2>Activities</h2>

<ul id='activities'>
  <% @ticket.activities.each do |activity| %>
    <li>
      #<%= activity.id %> -
      <%= link_to activity.subject, [@ticket, activity] %>
    </li>
   <% end %>
</ul>

<%= link_to "Edit Ticket", [:edit, @ticket] %> |
<%= link_to "Delete Ticket", [@ticket], :method => :delete, :confirm => "Are you sure you want to delete this ticket?" %> |
<%= link_to "View Tickets", root_path %>
|
<%= link_to "New Activity", new_ticket_activity_path(@ticket)%>
